#!/bin/sh

# Quicker
alias playbook='ansible-playbook'

# Flush OSX DNS cache
alias flushdns='sudo dscacheutil -flushcache && sudo killall -HUP mDNSResponder'

# Server the current directory on localhost:8000
alias simpleserve='python -m SimpleHTTPServer'

# mtr/htop better w/ sudo on OSX
alias mtr='sudo mtr'
alias htop='sudo htop'

# List all files colorized in long format
alias l="ls -lhaF -G --color=auto"

# Always use color output for `ls`
alias ls="command ls --color=auto"

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Shortcut to open following dir in Sublime Text
alias sub='subl .'
